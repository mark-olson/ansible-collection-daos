import configparser
import sys
import os
import subprocess
import json

def run_command(cmd):
    stdout = subprocess.Popen(cmd,
                              shell=True,
                              stdout=subprocess.PIPE).communicate()[0].decode('utf-8').strip()
    return stdout

def iommu_enabled():
    with open('/proc/cmdline') as f:
        if 'intel_iommu=on' in f.read():
            return True
        else:
            return False

# TODO: Find a more robust way to know if the system is
#       initialized. Relying on text output is fragile!
def system_initialized():
    stdout = run_command('dmg system query -v 2>&1')
    if "system is uninitialized" in stdout:
        return False
    else:
        return True

def main():
    facts = {}
    facts['iommu_enabled'] = iommu_enabled()
    facts['system_initialized'] = system_initialized()
    print(json.dumps(facts, sort_keys=False, indent=4, separators=(',', ' : ')))


if __name__== '__main__':
    main()
